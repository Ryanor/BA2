extends layout

block content
    h1= title
    h3 Create your own device profile
    p By adding services, characterists and descriptors you can define your own device profile
    br
    p Please be sure to fill in all values before submitting
    br
    div(id='serviceroot')
        input.remove(type='button', value='-', onclick='removeService(this)')
        br
        label.service(id='service', for='service') Service
        br
        label.service(id='servicename', for='servicename') Servicename:
        input(name='servicename', placeholder='Service name', value='')
        br
        label.service(id='serviceUUID', for='serviceUUID') Service UUID:
        input(name='serviceuuid', placeholder="Service UUID", value='')
        br
        input.add(type='button', value='Add Characteristic', onclick='addCharacteristic()')

    div(id='characteristicroot', style="display: none")
            br
            input.remove(type='button', value='-', onclick='removeCharacteristic(this)')
            br
            label.characteristic(id='characteristic', for='characteristic') Characteristic
            br
            label.service(id='characteristicUUID', for='servicename') Characteristic UUID:
            input(name='characteristicUUID', placeholder='Characteristic UUID', value='')
            br
            label.service(id='characteristicValueType', for='serviceUUID') Characteristic value type:
            input(name='characteristicValueType', placeholder="Characteristic value type", value='')
            br
            input.add(type='button', value='Add Descriptor', onclick='addDescriptor()')
    span(id='characteristicend')
    span(id='serviceend')
    br
    input.add(type='button', value='Add Service', onclick='addService()')

    br
    input.send(type='submit' value='Send profile to server')
